{
  "name": "gpu-agent",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint-fix": "turbo run lint-fix",
    "test": "turbo run test",
    "watch": "turbo run watch",
    "clean": "turbo run clean",
    "docker:build": "docker build -t gpu-agent .",
    "docker:run": "docker run -p 3000:3000 gpu-agent",
    "docker:dev": "docker compose up --build",
    "docker:down": "docker compose down"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@10.2.4",
  "devDependencies": {
    "turbo": "^2.3.3"
  }
}
