{
  "name": "shopping-agent",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prep": "mkdir public/js; mkdir public/images; npm run prep-bootstrap && npm run prep-bootstrap-icons",
    "prep-bootstrap": "cp -f node_modules/bootstrap/dist/js/bootstrap.bundle.min.js public/js/",
    "prep-bootstrap-icons": "cp -f node_modules/bootstrap-icons/bootstrap-icons.svg public/images/",
    "predev": "npm run prep",
    "dev": "DEBUG=shopping-agent:*,ebay-client:* next dev",
    "preinstall": "cd ../packages/ebay-client && npm i && npm run build",
    "gen-sitemap": "cd ../scripts && npm i && npx ts-node-esm gen-sitemap.ts",
    "prebuild": "npm run prep && npm run gen-sitemap",
    "build": "next build",
    "start": "DEBUG=shopping-agent:*,ebay-client:* next start",
    "lint-next": "next lint",
    "eslint": "eslint . --ext ts,tsx,js,jsx",
    "lint": "prettier -l \"{,!(node_modules)/**/}*.{ts,tsx,md,yml,json,html}\" && npm run eslint",
    "lint-fix": "prettier --write \"{,!(node_modules)/**/}*.{ts,tsx,md,yml,json,html}\" && npm run eslint -- --fix"
  },
  "dependencies": {
    "@activescott/diag": "^2.0.0",
    "@mdx-js/loader": "^3.0.0",
    "@mdx-js/react": "^3.0.0",
    "@next/mdx": "^14.0.2",
    "@popperjs/core": "^2.11.8",
    "@types/mdx": "^2.0.10",
    "bootstrap": "^5.3.2",
    "bootstrap-icons": "^1.11.1",
    "ebay-client": "file:../packages/ebay-client",
    "irritable-iterable": "^1.3.1",
    "next": "14.0.2",
    "posthog-js": "^1.93.2",
    "react": "^18",
    "react-dom": "^18",
    "react-popper": "^2.3.0",
    "rehype-add-classes": "^1.0.0",
    "remark-gfm": "^4.0.0",
    "sass": "^1.69.5",
    "type-fest": "^4.8.1"
  },
  "devDependencies": {
    "@activescott/eslint-config": "^2.3.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.0.2",
    "eslint-plugin-unicorn": "^49.0.0",
    "typescript": "^5"
  }
}
