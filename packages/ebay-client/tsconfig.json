{
  "include": ["./src/**/*"],
  "exclude": [
    "**/*.spec.ts",
    "dist",
    "node_modules",
    "example/**/*",
    "tests/**/*"
  ],
  "compilerOptions": {
    // << Recommended in TS Repo: https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping#node-18
    "lib": ["ES2022"],
    "module": "commonjs",
    "target": "ES2022",
    // >>
    "esModuleInterop": true,
    "outDir": "dist/es"
  }
}
